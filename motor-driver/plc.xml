    <pous>
      <pou name="motor_driver" pouType="program">
        <interface>
          <localVars>
            <variable name="led" address="%QX0.3">
              <type>
                <BOOL/>
              </type>
            </variable>
          </localVars>
          <localVars>
            <variable name="on_timer">
              <type>
                <derived name="TON"/>
              </type>
            </variable>
            <variable name="off_timer">
              <type>
                <derived name="TOF"/>
              </type>
            </variable>
          </localVars>
          <localVars>
            <variable name="servo_pwm" address="%QW1">
              <type>
                <REAL/>
              </type>
              <initialValue>
                <simpleValue value="90.0"/>
              </initialValue>
            </variable>
          </localVars>
          <localVars>
            <variable name="pwmcontroller">
              <type>
                <derived name="PWM_CONTROLLER"/>
              </type>
            </variable>
            <variable name="servo_angle">
              <type>
                <INT/>
              </type>
              <initialValue>
                <simpleValue value="0"/>
              </initialValue>
            </variable>
            <variable name="real_angle">
              <type>
                <REAL/>
              </type>
              <initialValue>
                <simpleValue value="0.0"/>
              </initialValue>
            </variable>
          </localVars>
        </interface>
        <body>
          <ST>
            <xhtml:p><![CDATA[(* validate the servo angle *)
IF(servo_angle < 0) THEN
  servo_angle := 0;

ELSIF(servo_angle > 180) THEN
  servo_angle := 180;

END_IF;

(* control the servo *)
real_angle := INT_TO_REAL(servo_angle);
servo_pwm := 255.0 / 180.0 * real_angle;
pwmcontroller(10, 500, servo_pwm);

(* Blink the builtin LED *)
on_timer(IN := NOT(off_timer.Q), PT := T#500ms);
off_timer(IN := on_timer.Q, PT := T#500ms);
led := off_timer.Q;
]]></xhtml:p>
          </ST>
        </body>
      </pou>
