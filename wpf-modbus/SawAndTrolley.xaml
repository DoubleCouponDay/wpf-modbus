<UserControl x:Class="wpf_modbus.SawAndTrolley"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:wpf_modbus"
             mc:Ignorable="d">
    <Grid Width="350" Height="100">
        <Label x:Name="ComponentsTitle" Content="Manual Control" />
        <Border BorderBrush="Black" BorderThickness="1" Margin="0,20,0,0" />
        <Label Content="Trolley Position" Margin="5,10,0,0" Width="100" Height="30" HorizontalAlignment="Left" />
        <TextBox x:Name="ManualTrolleyPosition" Margin="10,60,0,0" TextWrapping="Wrap" Width="120" Height="20" VerticalAlignment="Top" HorizontalAlignment="Left" />
        <Label Content="mm" Margin="130,55,0,0" Width="30" Height="30" VerticalAlignment="Top" HorizontalAlignment="Left" />
        <Label Content="Saw Angle" Margin="170,40,0,0" Width="100" Height="30" VerticalAlignment="Top" HorizontalAlignment="Left" />
        <TextBox x:Name="ManualSawAngle" Margin="175,60,0,0" TextWrapping="Wrap" Width="120" Height="20" VerticalAlignment="Top" HorizontalAlignment="Left" />
        <Label Content="Deg" Margin="280,40,0,0" Width="40" Height="30" />
    </Grid>
</UserControl>
