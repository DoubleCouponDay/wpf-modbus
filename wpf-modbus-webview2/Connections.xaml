<Page x:Class="wpf_modbus_webview2.Connections"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:wpf_modbus_webview2"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Connections">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <TextBox HorizontalAlignment="Left" Margin="103,107,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Grid.Column="1" Height="18"/>
        <Label Content="Saw Address" Margin="9,103,702,321" Grid.Column="1"/>
        <TextBox HorizontalAlignment="Left" Margin="103,138,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Grid.Column="1" Height="18"/>
        <Label Content="Trolley Address" Margin="9,134,702,290" Grid.Column="1"/>
        <Label Content="Connect to Machinery" HorizontalAlignment="Left" Margin="20,10,0,0" VerticalAlignment="Top" Grid.Column="1" Height="26" Width="127"/>
        <Button Content="Connect" Grid.ColumnSpan="2" HorizontalAlignment="Left" Margin="247,105,0,0" VerticalAlignment="Top" Click="ConnectSaw_Click" />
        <Button Content="Connect" Grid.ColumnSpan="2" HorizontalAlignment="Left" Margin="247,137,0,0" VerticalAlignment="Top" Click="ConnectTrolley_Click" />
        <Label x:Name="SawConnectionOutcome"  Content="{Binding Path=SawOutcome}" Grid.ColumnSpan="2" HorizontalAlignment="Left" Margin="314,103,0,0" VerticalAlignment="Top" Width="228"/>
        <Label x:Name="TrolleyConnectionOutcome" Content="{Binding Path=TrolleyOutcome}" Grid.ColumnSpan="2" HorizontalAlignment="Left" Margin="314,134,0,0" VerticalAlignment="Top" Width="228"/>
    </Grid>
</Page>
